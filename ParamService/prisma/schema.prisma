generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Parameter {
  id        String   @id @default(uuid())
  name      String   @unique
  value     Json
  type      String   // 'string', 'number', 'boolean', 'json', 'array'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("parameters")
}